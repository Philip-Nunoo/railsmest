<h1>Create a new goal</h1>
<%= form_for :goal, :url => { :controller => :goal, :action => :create } do |g| %>
<p>
  <strong><%= g.label :goal %></strong><br>
  <%= g.text_field :title %>
</p>
<br>
<p>
  <strong><%= g.label :description %></strong><br>
  <%= g.text_area :description %>
</p>

<p>
  <%= g.submit, disable_with: "Creating..." %>
</p>

<% end %>