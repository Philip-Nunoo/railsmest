<section class="row" style="padding: 110px 0px;">
	<div class="form register">
		<%= form_for @user,:url => { :controller => :user, :action => :user_sign_in } do |f| %>
		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email  %>
		</p>
		<p>
			<%= f.label :password %><br>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.submit "login", data: { disable_with: "Please wait..."} %>
		</p>
		<% end %>
	</div>
</section>
